<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.register.RegisterFragment">


    <TextView
        android:id="@+id/textView_register_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/md_white_1000"
        android:text="Register"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="30dp"
        android:textStyle="bold|italic" />
    <!--EGN-->

    <TextView
        android:id="@+id/editText_register_usernameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/editText_register_username"
        android:layout_below="@+id/textView_register_title"
        android:layout_marginLeft="20dp"
        android:text="Name: "
        android:textColor="@color/md_white_1000"
        android:textSize="25dp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/editText_register_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView_register_title"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/shapeemail"
        android:drawablePadding="10dp"
        android:padding="15dp"
        android:textColor="#fff"
        android:textColorHighlight="#fff"
        android:textColorHint="#fff" />
    <!--FIRST NAME-->

    <TextView
        android:id="@+id/editText_register_passwordText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/editText_register_password"
        android:layout_below="@+id/editText_register_username"
        android:layout_marginLeft="20dp"
        android:text="Password: "
        android:textColor="@color/md_white_1000"
        android:textSize="25dp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/editText_register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/editText_register_username"
        android:layout_marginLeft="160dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shapeemail"
        android:drawablePadding="10dp"
        android:padding="15dp"
        android:textColor="#fff"
        android:textColorHighlight="#fff"
        android:textColorHint="#fff"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button_register_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText_register_password"
        android:layout_marginTop="150dp"
        android:background="@drawable/shapelogin"
        android:padding="15dp"
        android:shadowColor="@android:color/transparent"
        android:text="Register" />


</RelativeLayout>