<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.productdetails.ProductDetailsFragment">

    <TextView
        android:id="@+id/textView_login_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Details"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:background="@color/md_white_1000"
        android:textSize="35sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView_productDetalils_productName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        android:textAlignment="center"
        android:layout_below="@id/textView_login_title"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/md_white_1000"
        android:background="@color/red"
        android:textSize="30sp"
        android:textStyle="bold|italic"/>


    <TextView
        android:id="@+id/textView_productDetalils_productDescription"
        android:layout_below="@+id/textView_productDetalils_productName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/md_white_1000"
        android:background="@color/red"
        android:textSize="30sp"
        android:textStyle="bold|italic"/>

    <TextView
        android:id="@+id/textView_productDetalils_productPrice"
        android:layout_below="@+id/textView_productDetalils_productDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/md_white_1000"
        android:background="@color/red"
        android:textSize="30sp"
        android:textStyle="bold|italic"/>

    <ImageView
        android:id="@+id/imageView_productDetails_productImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/textView_productDetalils_productPrice"
        android:background="@color/red"/>

    <Button
        android:id="@+id/button_productDetails_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView_productDetails_productImage"
        android:background="@drawable/shape_edit_text"
        android:padding="15dp"
        android:shadowColor="@android:color/transparent"
        android:layout_marginTop="40dp"
        android:text="Edit" />

    <Button
        android:id="@+id/button_productDetails_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_productDetails_edit"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_edit_text"
        android:padding="15dp"
        android:shadowColor="@android:color/transparent"
        android:text="Delete" />

</RelativeLayout>
