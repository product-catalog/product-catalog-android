<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.productdetails.ProductDetailsFragment">

    <TextView
        android:id="@+id/textView_productDetalils_productName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/textView_productDetalils_productDescription"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:text="TextView"
        android:layout_below="@+id/textView_productDetalils_productName"/>

    <TextView
        android:id="@+id/textView_productDetalils_productPrice"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:layout_below="@+id/textView_productDetalils_productDescription"
        android:text="TextView" />

    <ImageView
        android:id="@+id/imageView_productDetails_productImage"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_below="@+id/textView_productDetalils_productPrice"
        android:layout_marginTop="115dp" />

    <Button
        android:id="@+id/button_productDetails_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="91dp"
        android:background="@drawable/shape_edit_text"
        android:padding="15dp"
        android:shadowColor="@android:color/transparent"
        android:text="Edit" />

    <Button
        android:id="@+id/button_productDetails_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="19dp"
        android:background="@drawable/shape_edit_text"
        android:padding="15dp"
        android:shadowColor="@android:color/transparent"
        android:text="Delete" />

</RelativeLayout>
