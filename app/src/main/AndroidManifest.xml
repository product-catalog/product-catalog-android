<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pcatalog.productcatalog">

    <application
        android:name=".ProductCatalogApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.Light.NoActionBar">
        <activity android:name=".views.addproduct.AddProductActivity" />
        <activity android:name=".views.addproductpicture.AddProductPictureActivity" />
        <activity android:name=".views.addproductpicture.CameraActivity" />
        <activity android:name=".views.addproductpicture.DrawActivity" />
        <activity android:name=".views.productslist.ProductsListActivity" />
        <activity android:name=".views.productdetails.ProductDetailsActivity" />
        <activity android:name=".views.login.LoginActivity" />
        <activity android:name=".views.welcomemenu.WelcomeMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.register.RegisterActivity"></activity>
    </application>

</manifest>